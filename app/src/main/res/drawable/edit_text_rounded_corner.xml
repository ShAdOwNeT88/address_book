<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/black" />
            <corners android:radius="@dimen/address_book_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/light_grey" />
            <corners android:radius="@dimen/address_book_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/light_grey" />
            <corners android:radius="@dimen/address_book_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/light_grey" />
            <corners android:radius="@dimen/address_book_button_radius" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/black" />
            <corners android:radius="@dimen/address_book_button_radius" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/address_book_default_padding"
                android:top="@dimen/address_book_default_padding"
                android:right="@dimen/address_book_default_padding"
                android:bottom="@dimen/address_book_default_padding"
                />
        </shape>
    </item>

</selector>
