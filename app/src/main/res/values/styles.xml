<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBarDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/address_book_margin_small</item>
        <item name="android:elevation">@dimen/elevation_progress</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:max">100</item>
        <item name="android:progress">1</item>
    </style>

    <style name="PrimaryText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_marginStart">@dimen/address_book_margin_xbig</item>
        <item name="android:layout_marginEnd">@dimen/address_book_margin_xbig</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/address_book_text_size_title</item>
    </style>

    <style name="SecondaryText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_marginStart">@dimen/address_book_margin_xbig</item>
        <item name="android:layout_marginEnd">@dimen/address_book_margin_xbig</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/address_book_text_size_bigger</item>
    </style>

    <style name="SecondaryText.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <style name="ButtonDefault" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/address_book_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/address_book_margin_default</item>
        <item name="android:layout_marginBottom">@dimen/address_book_margin_default</item>
        <item name="android:textSize">@dimen/address_book_text_size_default</item>
    </style>

    <style name="ButtonDefault.Rounded">
        <!--        <item name="android:background">@drawable/button_rounded</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevation_standard</item>
        <item name="android:layout_marginBottom">@dimen/address_book_margin_default</item>
    </style>

    <style name="ButtonDefault.Flat" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/address_book_margin_xbig</item>
        <item name="android:layout_marginEnd">@dimen/address_book_margin_xbig</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/address_book_text_size_smaller</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonDefault.Flat.Primary">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/address_book_text_size_bigger</item>
        <item name="android:background">@drawable/button_rounded_primary</item>
        <item name="android:layout_marginBottom">@dimen/address_book_margin_default</item>
    </style>

    <style name="ButtonDefault.Flat.Secondary">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@drawable/custom_selector_text_secondary_button</item>
        <item name="android:padding">@dimen/address_book_default_padding</item>
        <item name="android:textSize">@dimen/address_book_text_size_bigger</item>
        <item name="android:background">@drawable/button_rounded_secondary</item>
        <item name="android:layout_marginBottom">@dimen/address_book_margin_default</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonDefault.Flat.Tertiary">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/address_book_text_size_bigger</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonDefault.Flat.Black">
        <item name="android:background">@drawable/button_rounded_black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDefault.Flat.White_Black_Outline">
        <item name="android:background">@drawable/button_black_outline</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WindowBackgroundColorBackground">
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="CustomToolbarArrow">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/address_book_margin_small</item>
        <item name="android:elevation">@dimen/elevation_standard</item>
    </style>

    <style name="EditTextBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_marginStart">@dimen/address_book_margin_default</item>
        <item name="android:layout_marginTop">@dimen/address_book_margin_verybig</item>
        <item name="android:layout_marginEnd">@dimen/address_book_margin_default</item>
        <item name="android:background">@drawable/edit_text_rounded_corner</item>
        <item name="android:padding">@dimen/address_book_margin_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/address_book_text_size_bigger</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>
